<Window x:Class="OSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid x:Name="MainRoot" Background="white" Margin="0,1,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="78*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="104*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="205*"/>
            <ColumnDefinition Width="342*"/>
            <ColumnDefinition Width="331*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="0" Margin="0,124,0,0.057" Grid.RowSpan="2" RadiusX="25" />
        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="1" Grid.Row="0" Margin="0,0,0,0.057"/>
        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="1" Margin="0,124,0,0.057" Grid.RowSpan="2"/>
        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="0" Grid.Row="0" Margin="0,0,0,0.057"/>

        <TextBlock Grid.Row="0" Grid.Column="1" Text="Имя" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="28" FontFamily="El Messiri" Height="37" Margin="0,0,0,0.057" Width="55" />
        <TextBlock Grid.Column="1" Text="username@gmail.com" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Height="24" Margin="0,124,0,0" Grid.RowSpan="2" Width="177" />

        <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Source="account.png" Width="60" Height="60" Margin="22,94,32,93.057" />

    </Grid>
</Window>

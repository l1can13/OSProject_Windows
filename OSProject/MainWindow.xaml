<Window x:Class="OSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid x:Name="MainRoot" Background="white" >
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="266*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="339*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="202*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="0" Grid.Row="0" Grid.RowSpan="7" Grid.ColumnSpan="3" Margin="0,0,5,5"/>
        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="0" Grid.Row="7" Grid.RowSpan="6" Grid.ColumnSpan="2" Margin="0,0,199,0" />
        <Rectangle Fill="#5DA892" Grid.Column="5" Grid.RowSpan="5" RadiusX="25" RadiusY="34" Margin="5,62,15,0" Grid.ColumnSpan="3"/>

        <TextBlock  x:Name="titleTextBlock" Text="Файлы" Grid.Column="3" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="24" Foreground="#FF5DA892" Height="32" Grid.ColumnSpan="2" />
        <TextBlock x:Name="usernameTextBlock" Grid.Row="1" Grid.Column="1" Text="Имя" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="28" FontFamily="El Messiri" Height="37" Width="55" Foreground="White" Grid.RowSpan="3" Margin="0,0,0,31" />
        <TextBlock x:Name="userEmailTextBlock" Grid.Column="1" Text="username@gmail.com" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="18" Height="24" Width="177" Grid.Row="3" Foreground="White" />
        <TextBlock x:Name="filenameTextBlock" Text="Название файла" Grid.Column="6" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="18" Height="24" Grid.ColumnSpan="2"/>

        <TextBlock Text="Формат файла:" Grid.Row="1" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" Height="16"/>
        <TextBlock Text="Размер файла:" Grid.Row="2" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" Height="16"/>
        <TextBlock Text="Загрузил:" Grid.Row="3" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" Height="16"/>
        <TextBlock Text="Дата загрузки:" Grid.Row="4" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" Height="16"/>

        <TextBlock Text="Скачать" Grid.Row="7" Grid.Column="7" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Height="16"/>
        <TextBlock Text="Переименовать" Grid.Row="8" Grid.Column="7" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Height="16"/>
        <TextBlock Text="Открыть доступ" Grid.Row="9" Grid.Column="7" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Height="16"/>
        <TextBlock Text="Удалить" Grid.Row="10" Grid.Column="7" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Height="16"/>

        <Image Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Source="account.png" Width="40" Height="40" Margin="0,17,0,0" />
        <Image Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Center" Source="folders.png" Width="30" Height="30" Grid.RowSpan="2"/>
        <Image Grid.Row="9" HorizontalAlignment="Center" VerticalAlignment="Top" Source="general.png" Width="30" Height="30" Margin="0,11,0,0" Grid.RowSpan="2"/>
        <Image Grid.Row="11" HorizontalAlignment="Center" VerticalAlignment="Top" Source="account.png" Width="30" Height="30" Margin="0,11,0,0" Grid.RowSpan="2"/>
        <Image Grid.Row="7" Grid.Column="5" Source="download.png" Grid.ColumnSpan="2" Margin="5,0,0,0"/>
        <Image Grid.Row="7" Grid.Column="5" Source="pen.png" Grid.ColumnSpan="2" Margin="5,25,0,25" Grid.RowSpan="3"/>
        <Image Grid.Row="9" Grid.Column="5" Source="share.png" Grid.ColumnSpan="2" Margin="5,0,0,0"/>
        <Image Grid.Row="9" Grid.Column="5" Source="trash.png" Grid.ColumnSpan="2" Margin="5,25,0,25" Grid.RowSpan="3"/>

        <Button x:Name="filesButton" Grid.Row="7" Grid.Column="1" Style="{StaticResource BorderlessButton}" HorizontalContentAlignment="Left" Content="Файлы" Background="#5DA892" Foreground="White" Width="Auto" Grid.RowSpan="3" Margin="0,0,5,25" Grid.ColumnSpan="2"/>
        <Button x:Name="generalButton" Grid.Row="9" Grid.Column="1" Style="{StaticResource BorderlessButton}" HorizontalContentAlignment="Left" Content="Общее" Background="#5DA892" Foreground="White" Margin="0,0,5,25" Width="Auto" Grid.RowSpan="3" Grid.ColumnSpan="2"/>
        <Button x:Name="accountButton" Grid.Row="11" Grid.Column="1" Style="{StaticResource BorderlessButton}" HorizontalContentAlignment="Left" Content="Аккаунт" Background="#5DA892" Foreground="White" Width="Auto" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,0,5,0"/>
        <Button x:Name="addButton" Grid.Row="3" Grid.Column="3" Background="#5DA892" Content="Добавить" Foreground="White"/>

        <TextBox x:Name="findBox" Grid.Column="3" BorderBrush="#5DA892" BorderThickness="2" Text="Поиск по названию" VerticalContentAlignment="Center" Foreground="Gray" Grid.ColumnSpan="2" Margin="0,62,0,0" Grid.RowSpan="2" />
    </Grid>
</Window>

<Window x:Class="OSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid x:Name="MainRoot" Background="white" >
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="76*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="92*"/>
            <ColumnDefinition Width="200*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="339*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="202*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#5DA892" IsHitTestVisible="False" Grid.Column="0" Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="2"/>
        <Rectangle Fill="#5DA892" Grid.Row="1" Grid.Column="6" Grid.RowSpan="4" RadiusX="25" RadiusY="34" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="titleTextBlock" Text="Файлы" Grid.Column="3" VerticalAlignment="Center" FontSize="24" Foreground="#FF5DA892" Grid.ColumnSpan="2" Margin="15,0,0,0" />
        <TextBlock x:Name="usernameTextBlock" Grid.Row="2" Grid.Column="1" Text="Имя" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="24" FontFamily="El Messiri" Foreground="White" />
        <TextBlock x:Name="userEmailTextBlock" Grid.Column="1" Grid.Row="3" Text="username@gmail.com" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="14" Foreground="White" />
        <TextBlock x:Name="filenameTextBlock" Text="Название файла" Grid.Column="6" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="18" Grid.ColumnSpan="2"/>

        <TextBlock Text="Формат файла:" Grid.Row="1" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" />
        <TextBlock Text="Размер файла:" Grid.Row="2" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" />
        <TextBlock Text="Загрузил:" Grid.Row="3" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" />
        <TextBlock Text="Дата загрузки:" Grid.Row="4" Grid.Column="6" VerticalAlignment="Center" FontSize="12" Margin="20,0,0,0" Foreground="White" Grid.ColumnSpan="2" />

        <Button x:Name="downloadButton" Click="downloadButton_Click" Content="Скачать" Grid.Row="7" Grid.Column="7" Background="Transparent" VerticalAlignment="Center" FontSize="12" Margin="15,0,0,0" HorizontalContentAlignment="Left" />
        <Button x:Name="renameButton" Click="renameButton_Click" Content="Переименовать" Grid.Row="8" Grid.Column="7" Background="Transparent" VerticalAlignment="Center" FontSize="12" Margin="15,0,0,0" HorizontalContentAlignment="Left" />
        <Button x:Name="shareButton" Click="shareButton_Click" Content="Открыть доступ" Grid.Row="9" Grid.Column="7" Background="Transparent" VerticalAlignment="Center" FontSize="12" Margin="15,0,0,0" HorizontalContentAlignment="Left" />
        <Button x:Name="deleteButton" Click="deleteButton_Click" Content="Удалить" Grid.Row="10" Grid.Column="7" Background="Transparent" VerticalAlignment="Center" FontSize="12" Margin="15,0,0,0" HorizontalContentAlignment="Left" />

        <Image Grid.Row="2" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Source="account.png" Width="40" Height="40" Margin="26,11,25,11" />
        <Image Grid.Row="7" Grid.Column="6" Source="download.png" />
        <Image Grid.Row="8" Grid.Column="6" Source="pen.png"/>
        <Image Grid.Row="9" Grid.Column="6" Source="share.png" />
        <Image Grid.Row="10" Grid.Column="6" Source="trash.png" />

        <Button x:Name="addButton" Grid.Row="3" Grid.Column="3" Margin="15, 0, 0, 0" Background="#5DA892" Content="Добавить" Foreground="White" Click="addButton_Click"/>

        <ListView x:Name="sideMenu" BorderThickness="0" Grid.Row="7" Grid.ColumnSpan="2" Grid.RowSpan="5" Background="#5DA892">
            <ListViewItem x:Name="filesItem" Height="40">
                <StackPanel Orientation="Horizontal">
                    <Image Source="folders.png" VerticalAlignment="Center"/>
                    <TextBlock Text="Файлы" VerticalAlignment="Center" Margin="25, 0, 0, 0" Foreground="white" FontSize="14" FontFamily="el_messiri"/>
                </StackPanel>
            </ListViewItem>
            <ListViewItem x:Name="generalItem" Height="40">
                <StackPanel Orientation="Horizontal">
                    <Image Source="general.png" VerticalAlignment="Center"/>
                    <TextBlock Text="Общее" VerticalAlignment="Center" Margin="25, 0, 0, 0" Foreground="white" FontSize="14" FontFamily="el_messiri"/>
                </StackPanel>
            </ListViewItem>
            <ListViewItem x:Name="accountItem" Height="40">
                <StackPanel Orientation="Horizontal">
                    <Image Source="account.png" VerticalAlignment="Center"/>
                    <TextBlock Text="Аккаунт" VerticalAlignment="Center" Margin="25, 0, 0, 0" Foreground="white" FontSize="14" FontFamily="el_messiri"/>
                </StackPanel>
            </ListViewItem>
        </ListView>

        <Border Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="15, 0, 15, 0" CornerRadius="13" BorderBrush="#5DA892" BorderThickness="2">
            <TextBox x:Name="findBox" BorderThickness="0" VerticalContentAlignment="Center" Foreground="Gray" Background="Transparent" Margin="5, 5, 5, 5"/>
        </Border>

        <ListView x:Name="listViewFiles" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="9" BorderThickness="0">

        </ListView>
    </Grid>
</Window>
